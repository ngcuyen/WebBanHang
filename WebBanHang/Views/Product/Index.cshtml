<div class="container mt-4">
    <div class="row">
        <!-- Danh sách sản phẩm -->
        <div class="col-md-9">
            <!-- Hiển thị sản phẩm bằng dạng dòng sản phẩm sử dụng Bootstrap Row và Col -->
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <!-- Sản phẩm 1 -->
                @foreach (var product in Model)
                {
                    
                <div class="col">
                    <div class="card h-100">
                        <img src=@product.ImageUrl style="height:250px;" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                                <p class="card-text">@product.Price</p>
                                <a class="btn btn-success" asp-action="Display" asp-route-id="@product.Id">View</a> |
                                <a class="btn btn-dark" asp-action="Update" asp-route-id="@product.Id">Edit</a> |
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>